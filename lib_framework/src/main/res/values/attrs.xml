<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--占位图-->
    <declare-styleable name="PlaceholderView">
        <attr name="phv_tip_img" format="reference"/>
        <attr name="phv_tip_text" format="string"/>
        <attr name="phv_tip_sub_text" format="string"/>
    </declare-styleable>

    <!--带子标题的TextView-->
    <declare-styleable name="SubTextView">
        <attr name="stv_title" format="string"/>
        <attr name="stv_sub_title" format="string"/>
    </declare-styleable>

    <!--圆形头像-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
    </declare-styleable>

    <!--带字母的ImageView-->
    <declare-styleable name="CharacterView">
        <attr name="cv_title_text" format="string"/>
        <attr name="cv_title_size" format="dimension"/>
        <attr name="cv_title_color" format="color"/>
        <attr name="cv_background_color" format="color"/>
        <attr name="cv_letter_count" format="integer"/>
        <attr name="cv_type">
            <enum name="circle" value="0"/>
            <enum name="rect" value="1"/>
        </attr>
        <attr name="cv_border_width" format="dimension"/>
        <attr name="cv_border_color" format="color"/>
    </declare-styleable>
</resources>