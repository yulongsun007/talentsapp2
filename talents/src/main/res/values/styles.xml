<resources>


    <!--人才搜索-->
    <style name="TalentSearchEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:background">@drawable/bg_ll_circular</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColorHint">@color/color_text_secondary</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>


    <!--人才详情-->
    <style name="TalentDetailLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>


    <!--################ 发布职位 ###################-->
    <style name="PostJobSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="PostJobSubTitleLinearLayout" parent="LinearLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/bg_ll</item>
    </style>

    <style name="PostJobLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="PostJobLabelValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="PostJobRightIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_ll_arrow_right_grey</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--#################### 招聘模版  ####################-->
    <style name="JobTempSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="JobTempSubTitleLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:background">@drawable/bg_ll</item>
    </style>

    <style name="JobTempLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="JobTempLabelValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="JobTempLabelEditValue">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="JobTempLabelIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_ll_arrow_right_grey</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--搜索招聘-->
    <style name="JobTempSearchEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:background">@drawable/bg_ll_circular</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColorHint">@color/color_text_secondary</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>


    <!--我的:Item-->
    <style name="MineItemLinearLayout" parent="LinearLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">14dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_ll</item>
    </style>

    <!--我的：Icon-->
    <style name="MineLeftIconImageView">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--我的：Label-->
    <style name="MineLabelTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>


    <!--个人信息编辑页：Item-->
    <style name="InfoEditItemLinearLayout" parent="LinearLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">14dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_ll</item>
    </style>

    <!--个人信息编辑页：Lebel-->
    <style name="InfoEditLabelTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--个人信息编辑页-->
    <style name="InfoEditValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!--登陆页-->
    <style name="LoginLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!--注册页 EditText-->
    <style name="RegisterValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_ll_arrow_right_grey</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!--设置页-->
    <style name="SettingItemLinearLayout" parent="LinearLayout.CommonBackGround">
        <item name="android:background">@drawable/bg_ll</item>
    </style>

    <!--###################### 以下为通用布局 ######################-->


    <!--侧滑返回主题设置-->
    <style name="AppTheme.NoActionBar.SwipeBack">
        <!-- 为 Theme 设置透明属性 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--TabLayout 字体大小-->
    <style name="tab_appearance">
        <item name="android:textSize">16sp</item>
    </style>


    <!--通用LinearLayout-->
    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--通用：LinearLayout背景-->
    <style name="LinearLayout.CommonBackGround" parent="LinearLayout">
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">14dp</item>
    </style>

    <!--通用：LinearLayout手机号设置-->
    <style name="LinearLayout.Mobile" parent="LinearLayout">
        <item name="android:background">@null</item>
        <item name="android:hint">"请输入手机号"</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--通用：分割线-->
    <style name="CommonDividerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_rv_divider</item>
    </style>

    <!--通用：右箭头-->
    <style name="CommonRightArrowImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_ll_arrow_right_grey</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>
