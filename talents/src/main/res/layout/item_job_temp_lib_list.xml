<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_job_temp_lib_job_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java工程师"
                android:textColor="@color/color_text_orange"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_job_temp_lib_job_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-1-1 23:10:10"
                    android:textColor="@color/color_text_secondary"
                    android:textSize="10sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_job_temp_lib_job_name"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <win.yulongsun.framework.widget.ImageView.CharacterView
                    android:id="@+id/civ_job_temp_lib_company_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/logo"
                    app:cv_background_color="@color/color_primary_dark"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_job_temp_lib_job_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5k-10k"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_job_temp_lib_biz_direct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="IT互联网"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_job_temp_lib_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="杭州就等科技有限公司"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_job_temp_lib_job_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="模板编号-10086"
                    android:textColor="@color/color_primary"
                    android:textSize="10sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>