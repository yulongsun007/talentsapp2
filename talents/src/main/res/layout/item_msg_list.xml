<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:background="@android:color/white"
              android:orientation="horizontal"
              android:padding="16dp">

    <win.yulongsun.framework.widget.ImageView.CharacterView
        android:id="@+id/cv_msg_type"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cv_background_color="@color/color_primary"
        app:cv_title_size="14sp"
        app:cv_title_text="系统"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="14dp">

        <TextView
            android:id="@+id/tv_msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统消息"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_msg_title"
            android:layout_marginTop="5dp"
            android:text="您的账号欠费啦"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_msg_create_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="最近"
            android:textSize="10sp"/>

    </RelativeLayout>

</LinearLayout>
