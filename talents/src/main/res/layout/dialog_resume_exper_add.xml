<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="14dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目时间:"
            android:textColor="@color/color_text_black"/>

        <EditText
            android:id="@+id/et_dialog_exper_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_ll"
            android:padding="12dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目名称:"
            android:textColor="@color/color_text_black"/>

        <EditText
            android:id="@+id/et_dialog_exper_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_ll"
            android:padding="12dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目岗位:"
            android:textColor="@color/color_text_black"/>

        <EditText
            android:id="@+id/et_dialog_exper_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_ll"
            android:padding="12dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职责简述:"
            android:textColor="@color/color_text_black"/>

        <EditText
            android:id="@+id/et_dialog_exper_job_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_ll"
            android:lines="3"
            android:gravity="left"
            android:padding="12dp"
            android:textSize="14sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目简述:"
            android:textColor="@color/color_text_black"/>

        <EditText
            android:id="@+id/et_dialog_exper_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_ll"
            android:gravity="left"
            android:lines="4"
            android:padding="12dp"
            android:textSize="14sp"/>
    </LinearLayout>


</LinearLayout>