<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp">

        <LinearLayout
            android:id="@+id/ll_me_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="14dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/logo"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_me_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="孙宇龙"
                        android:textColor="@color/color_text_black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_me_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="上海卓冀有限公司"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_me_company_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司编号-10001"
                        android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="手机号:"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_me_user_mobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="13067509781"
                    android:textColor="@color/color_primary"
                    android:textSize="12sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="地    区:"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_me_company_addr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="浙江杭州"
                    android:textSize="12sp"/>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_me_card"
                style="@style/MineItemLinearLayout">

                <ImageView
                    style="@style/MineLeftIconImageView"
                    android:src="@mipmap/ic_card"/>

                <TextView
                    style="@style/MineLabelTextView"
                    android:layout_marginLeft="10dp"
                    android:text="名片"/>

                <ImageView
                    style="@style/CommonRightArrowImageView"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_me_score"
                style="@style/MineItemLinearLayout">

                <ImageView
                    style="@style/MineLeftIconImageView"
                    android:src="@mipmap/ic_wallet"/>

                <TextView
                    style="@style/MineLabelTextView"
                    android:layout_marginLeft="10dp"
                    android:text="积分"/>

                <ImageView
                    style="@style/CommonRightArrowImageView"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_me_wallet"
                style="@style/MineItemLinearLayout">

                <ImageView
                    style="@style/MineLeftIconImageView"
                    android:src="@mipmap/ic_wallet"/>

                <TextView
                    style="@style/MineLabelTextView"
                    android:layout_marginLeft="10dp"
                    android:text="钱包"/>

                <ImageView
                    style="@style/CommonRightArrowImageView"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_me_setting"
                style="@style/MineItemLinearLayout">

                <ImageView
                    style="@style/MineLeftIconImageView"
                    android:src="@mipmap/ic_setting"/>

                <TextView
                    style="@style/MineLabelTextView"
                    android:layout_marginLeft="10dp"
                    android:text="设置"/>

                <ImageView
                    style="@style/CommonRightArrowImageView"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>