<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="6dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">


        <win.yulongsun.framework.widget.ImageView.CharacterView
            android:id="@+id/iv_score_user_img"
            android:layout_width="@dimen/score_avatar_size"
            android:layout_height="@dimen/score_avatar_size"
            app:cv_background_color="@color/color_primary_dark"/>


        <TextView
            android:id="@+id/tv_score_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_score_user_img"
            android:text="张三"
            android:textColor="@color/color_text_black"
            android:textSize="14sp"/>


        <ImageView
            android:id="@+id/iv_score_award"
            android:layout_width="@dimen/score_medal"
            android:layout_height="@dimen/score_medal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_score_1"
            />

        <TextView
            android:id="@+id/tv_score_user_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_score_award"
            android:text="100"
            android:textSize="12sp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>